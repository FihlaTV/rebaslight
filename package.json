{
  "name": "rebaslight",
  "version": "3.2.2",
  "private": true,
  "description": "Rebaslight - an easy to use special effects editor",
  "repository": "git@github.com:rebaslight/rebaslight.git",
  "author": "Small Helm LLC <dev@smallhelm.com>",
  "license": "AGPL-3.0+",
  "productName": "Rebaslight",
  "homepage": "http://www.rebaslight.com/",
  "main": "app/index.js",
  "build": {
    "appId": "com.rebaslight",
    "files": [
      "app",
      "node_modules"
    ],
    "extraResources": [
      {
        "from": "ffmpeg-bins/${os}/${arch}",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.xz"
      ]
    },
    "nsis": {}
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "scriptsp --raw run watch",
    "run": "NODE_ENV=development electron ./app",
    "watch": "NODE_ENV=development webpack --watch",
    "test": "node src/tests.js",
    "pack": "build --dir",
    "webpack": "webpack",
    "dist": "build --x64 --ia32",
    "release": "webpack && build"
  },
  "devDependencies": {
    "contra": "^1.9.1",
    "css-loader": "^0.28.1",
    "cuid": "^1.3.8",
    "dom-delegator": "^13.1.0",
    "electron": "1.7.5",
    "electron-builder": "19.26.3",
    "eslint": "^4.5.0",
    "eslint-loader": "^1.6.1",
    "font-awesome": "^4.7.0",
    "get-in": "^2.0.0",
    "hex-rgb": "^1.0.0",
    "js-managed-css": "^1.4.0",
    "level-js": "^2.2.3",
    "levelup": "^1.3.1",
    "lodash": "^4.11.2",
    "main-loop": "^3.2.0",
    "normalize.css": "^5.0.0",
    "rgb-hex": "^1.0.0",
    "scriptsp": "^1.0.1",
    "seed-random": "^2.2.0",
    "semver": "^5.1.0",
    "style-loader": "^0.18.1",
    "tape": "^4.6.3",
    "url-loader": "^0.5.7",
    "virtual-dom": "^2.1.1",
    "virtual-dom-absolute-layout": "^1.0.0",
    "virtual-dom-closure-widget": "^1.0.0",
    "webpack": "^3.5.5",
    "wrap-prevent-default": "^1.0.0",
    "xhr": "^2.2.0",
    "xtend": "^4.0.1"
  }
}
